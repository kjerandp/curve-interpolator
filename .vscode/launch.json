{
  "version": "0.2.0",
  "configurations": [
  {
      "name": "Run ES6 Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
          "./test/*.js",
          "--require", "babel-register",
          "-u", "tdd",
          "--timeout", "999999",
          "--colors"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "runtimeArgs": [
          "--nolazy"
      ],
      "sourceMaps": true
  }]
}
